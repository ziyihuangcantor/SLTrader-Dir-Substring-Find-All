@using SLTrader.Tools
@model SLTrader.Models.SecurityPanelModel

<script type="text/javascript">
    function onSubmit() {
        var value = document.getElementById("SearchCiteria").value;

        UpdateIssue(value);
    }

    function onSubmitEasy() {
