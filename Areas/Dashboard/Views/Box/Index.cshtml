@using SLTrader.Helpers
@using SLTrader.Tools


@(
    Html.Kendo().Chart()
    .Name("BoxChart")
    .Title(LabelHelper.Text("BoxChart"))
    .Legend(legend => legend.Position(ChartLegendPosition.Top))
    .DataSource(ds => ds.Read(read => read.Action("GetBoxBreakdown", "Credit", new {area= "Dashboard" }).Data(())))
    .Tooltip(tooltip => tooltip
            .Visible(true)
            .Format("{0:N0}")
        )
)