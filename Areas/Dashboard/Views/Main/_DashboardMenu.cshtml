
<script type="text/javascript">
    function onDashboardSelect(e) {
        e.preventDefault();

        var item = e.item.firstChild.pathname;
        var title = e.item.firstChild.textContent;

        try {
            if (item != undefined) {
                $.ajax({
                    url: "@Url.Action("RetrievePartial", "Main", new {Area = "Dashboard"})",
                    data: {
                        url: item
                    },
                    success: function (result) {
                        $("#DashboardContentArea").html(result);
                    },
                    error: function (e) {
                        $("#DashboardContentArea").html(e);
                    }
                });
            }
        }
        catch (e) {
            alert(e.message);
        }
    }
</script>

@( 
    Html.Kendo().Menu()
        .Name("DashboardMainMenu")
           .HoverDelay(100)
           .OpenOnClick(true)
           .Orientation(MenuOrientation.Horizontal)
           .Events(events => events.Select("onDashboardSelect"))
           .BindTo("DashboardWebSiteMap"))

<div id="DashboardMainMenu" class="k-menu-vertical"></div>

